<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td><img style="width: 70px;height:70px" src="./product-image/{{this.product._id}}.jpg" alt=""></td>
                    <td>{{this.product.Name}}</td>
                    <td>Rs.{{this.product.Price}}</td>
                    <td>
                        <button type="button" class="btn btn-secondary me-3" id="minus-btn"
                            onclick="changeQuantity('{{this._id}}', '{{this.product._id}}', -1, '{{this.product.Name}}')">-</button>
                        <span id="{{this.product._id}}">{{this.quantity}}</span> <button type="button"
                            class="btn btn-secondary ms-3"
                            onclick="changeQuantity('{{this._id}}', '{{this.product._id}}', 1, '{{this.product.Name}}')">+</button>
                    </td>
                    <td>
                        <a href="/delete-cart-item/{{this.product._id}}" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
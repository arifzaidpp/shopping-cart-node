<section>
    <div class="container">
        <div class="d-md-flex justify-content-md-end mt-4">
            <a href="/admin/add-product" class="btn btn-success">Add Product</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Decription</th>
                    <th>Image</th>
                    <th>Oprations</th>
                </tr>
            </thead>
            <tbody>
                {{#each Products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td><img style="width: 50px; height: 50px;" src="/product-image/{{this._id}}.jpg" alt=""></td>
                    <td>
                        <a href="admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
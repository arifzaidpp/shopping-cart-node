<section>
    <div class="container">
        <div class="d-md-flex justify-content-md-end mt-4">
            <a href="/admin/add-product" class="btn btn-success">Add Product</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Decription</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each Products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.title}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px; height: 50px;" src="{{this.image}}" alt=""></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>